@model PemitManagement.ViewModels.Observations.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Create Observation";
}

<partial name="_ObservationSteps" model="1" />

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-10">

        <div class="card border-0 rounded-4 observation-card">
            <div class="card-body p-5">

                <div class="text-center mb-4">
                    <h4 class="fw-bold mb-2">Observation Applicant Details</h4>
                    <p class="text-muted">
                        Your details are fetched automatically based on your login credentials.
                    </p>
                </div>


                <div class="mb-4">
                    <label class="form-label fw-semibold">Employee ID</label>
                    <input type="text"
                           class="form-control"
                           value="@Model.EmployeeId"
                           readonly
                           aria-label="Employee ID" />
                    <div class="form-text">
                        Your Employee ID as per your login credentials.
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Employee Name</label>
                    <input type="text"
                           class="form-control"
                           value="@Model.EmployeeName"
                           readonly
                           aria-label="Employee Name" />
                    <div class="form-text">
                        Your name as per your login credentials.
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="PermitDetails"
                       class="btn btn-lg btn-orange px-4">
                        Continue
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>
