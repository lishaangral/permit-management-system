<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Permit Management</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>

@{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();

        var dashboardControllers = new[]
        {
                "Dashboard",
                "PermitAnalysis",
                "ViolationAnalysis",
                "Observations",
                "Permits",
                "PermitTypes",
                "PermitTypeIssuers",
                "PermitTypeViolations",
                "Violations",
                "IssuerRoles",
                "Locations"
        };

        var isDashboardArea = dashboardControllers.Contains(controller);

        var isProfile = controller == "Account" && action == "Profile";

        var hideFooterPages = isDashboardArea || isProfile;
}

<body class="@(hideFooterPages ? "no-footer" : "") @(isDashboardArea ? "" : "no-sidebar")">

    <header>
        <partial name="_Navbar" />
    </header>

    <div class="app-wrapper">
        @if (isDashboardArea)
        {
            <partial name="_Sidebar" />
        }
        <main class="app-content">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted">
        <div class="container text-center">
            © 2025 - Permit Management
        </div>
    </footer>

    <partial name="_Toast" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
